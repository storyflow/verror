{
  "name": "@voiceflow/verror",
  "description": "xtrct.io error class",
  "version": "0.0.2",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/storyflow/verror/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "http-status": "^1.3.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@voiceflow/eslint-config": "0.0.1",
    "@voiceflow/git-branch-check": "^1.0.2",
    "@voiceflow/prettier-config": "^1.0.4",
    "chai": "^4.2.0",
    "commitizen": "^3.1.1",
    "commitlint": "^7.5.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "fixpack": "^2.3.1",
    "husky": "^2.2.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.6.2",
    "jsdoc-to-markdown": "^5.0.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/storyflow/verror#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "git-branch-check"
    }
  },
  "keywords": [
    "error"
  ],
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/verror.git"
  },
  "scripts": {
    "docs": "jsdoc2md --template README.template --files \"index.js\" > README.md",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "test": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.{unit,it}.js'",
    "test:integration": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.it.js'",
    "test:single": "mocha --paths --opts ./config/tests/mocha.opts",
    "test:unit": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.unit.js'"
  }
}
