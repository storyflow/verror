{
  "name": "@voiceflow/verror",
  "description": "xtrct.io error class",
  "version": "0.0.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/storyflow/verror/issues"
  },
  "dependencies": {
    "http-status": "^1.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@voiceflow/eslint-config": "0.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.6.2",
    "jsdoc-to-markdown": "^5.0.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "@commitlint/config-conventional": "^7.5.0",
    "commitizen": "^3.1.1",
    "commitlint": "^7.5.2",
    "cz-conventional-changelog": "^2.1.0"
  },
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/storyflow/verror#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "fixpack && npm run docs && LIST=`git diff-index --cached --name-only HEAD | grep '.*\\.js' | grep -v json`; if [ \"$LIST\" ]; then npm run lint && git add $LIST; fi"
    }
  },
  "keywords": [
    "error"
  ],
  "files": [
    "index.js"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js",
      ".*.js",
      "commitlint.config.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/verror.git"
  },
  "scripts": {
    "docs": "jsdoc2md --template README.template --files \"index.js\" > README.md",
    "lint": "eslint \"**/*.js\" --fix",
    "test": "npm run unit && npm run lint",
    "unit": "nyc mocha --use_strict --exit \"tests/**/*.unit.js\""
  }
}
